<%- include ('partials/header'); %>

<style>
    .slideshow li {
      opacity: 1;
    }
    body {
        background-color: black;
    }
    .slideshow { 
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 0;
        list-style: none;
        margin: 0;
        padding: 0;
    }
    .slideshow li { 
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        background-size: cover;
        background-position: 50% 50%;
        background-repeat: no-repeat;
        opacity: 0;
        z-index: 0;
        animation: imageAnimation 40s linear infinite; 
        animation-iteration-count: 10;
    }
    .slideshow li:nth-child(1) { 
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(https://upload.wikimedia.org/wikipedia/commons/thumb/c/ca/Flag_of_Iran.svg/1200px-Flag_of_Iran.svg.png); 
      animation-delay: 0s; 
    }
    .slideshow li:nth-child(2) { 
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(https://www.fodors.com/wp-content/uploads/2020/01/05_IranCulturalSites__GolestanPalace_shutterstock_1305414259.jpg);
      animation-delay: 5s; 
    }
    .slideshow li:nth-child(3) { 
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(https://irantourismer.com/wp-content/uploads/2019/04/2.jpg);
      animation-delay: 10s; 
    }
    .slideshow li:nth-child(4) { 
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(https://media.cntraveller.in/wp-content/uploads/2020/01/Iran-cultural-sites-1920x1080.jpg);
      animation-delay: 15s; 
    }
    .slideshow li:nth-child(5) { 
      background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(https://www.imaginative-traveller.com/images/articles/blogs/Esfahan%202.jpg?1477481838974);
      animation-delay: 20s; 
    }
    @keyframes imageAnimation { 
        0% { 
          opacity: 0; 
          animation-timing-function: ease-in;
        }
        10% {
          opacity: 1;
          animation-timing-function: ease-out;
        }
        20% {
          opacity: 1
        }
        30% {
          opacity: 0
        }
    }
    .text {
      background-color: hsl(48, 100%, 67%);
      border-radius: 50%;
      color: black;
      font-size: 2vw; 
      font-weight: bold;
      margin: 0 auto;
      padding: 10px;
      width: 10%;
      text-align: center;
      position: absolute;
      top: 5%;
      left: 5%;
      mix-blend-mode: screen;
      animation: moveDown 5s ease-in; 
    }
    .text-1 {
      background-color: hsl(141, 71%, 48%);
      border-radius: 3px;
      color: black;
      font-size: 2vw; 
      font-weight: bold;
      margin: 0 auto;
      padding: 10px;
      width: 20rem;
      text-align: center;
      position: absolute;
      top: 85%;
      right: 5%;
      mix-blend-mode: screen;
      animation: moveLeft 2s ease-in; 
    }
    .text:hover, .text:active {
      transform: scale(1.2);
    }
    .click{
      color: red;
      border-radius: 10px;
      color: hsl(48, 100%, 67%);
      font-size: 1.5vw; 
      font-weight: bold;
      margin: 0 auto;
      padding: 0;
      width: 0;
      text-align: center;
      position: absolute;
      top: 10%;
      left: 10%;
      transform: rotate(-90deg);
      opacity: 0;
      animation: click 3s ease-in;
      animation-delay: 4s;
      animation-iteration-count: 1000;
    }
    @keyframes moveDown {
      0% {
        top: -10%;
      }
      80% {
        top: 6%;
      }
      100% {
        top: 5%;
      }

    }
    @keyframes moveLeft {
      0% {
        right: -30%;
      }
      50% {
        right: 20%;
      }
    }
    @keyframes click {
      0% { 
          opacity: 0; 
          animation-timing-function: ease-in;
          top: 30%;
        }
        10% {
          opacity: 1;
          animation-timing-function: ease-out;
          top: 25%;
        }
        20% {
          opacity: 1;
          top: 21%;
        }
        30% {
          opacity: 0;
          top: 18%;
        }
    }
    .image-container {
      background-image: black;
      background-size: cover;
      position: relative;
      height: 0px;
    }
    a {
      text-decoration: none;
    } 
</style>

